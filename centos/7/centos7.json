{
  "builders": [
    {
      "vm_name": "centos7",
      "type": "virtualbox-iso",
      "guest_os_type": "RedHat_64",
      "iso_url": "http://ftp.iij.ad.jp/pub/linux/centos/7.0.1406/isos/x86_64/CentOS-7.0-1406-x86_64-DVD.iso",
      "iso_checksum": "713ea7847adcdd1700e92429f212721a",
      "iso_checksum_type": "md5",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "1h",
      "disk_size": "32768",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "guest_additions_path": "VBoxGuestAdditions.iso",
      "http_directory": "./http",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "512"],
        ["modifyvm", "{{.Name}}", "--cpus", "1"]
      ]
    },
    {
      "vm_name": "centos7",
      "type": "vmware-iso",
      "guest_os_type": "centos-64",
      "iso_url": "http://ftp.iij.ad.jp/pub/linux/centos/7.0.1406/isos/x86_64/CentOS-7.0-1406-x86_64-DVD.iso",
      "iso_checksum": "713ea7847adcdd1700e92429f212721a",
      "iso_checksum_type": "md5",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "1h",
      "disk_size": "32768",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "tools_upload_flavor": "linux",
      "http_directory": "./http",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "vmx_data": {
        "memsize": "512",
        "numvcpus": "1",
        "vhv.enable": "TRUE"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "./scripts/netpersist.sh",
        "./scripts/publickey.sh",
        "./scripts/sudoers.sh",
        "./scripts/sshd.sh",
        "./scripts/vbox.sh",
        "./scripts/vfusion.sh",
        "./scripts/cleanup.sh",
        "./scripts/zerofill.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "output": "./artifacts/centos7-{{.Provider}}.box"
    }
  ]
}
